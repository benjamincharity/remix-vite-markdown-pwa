{
  "cleanUrls": true,
  "framework": "remix",
  "headers": [
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=300, s-maxage=31556952"
        }
      ],
      "source": "/(.*)"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=86400"
        }
      ],
      "source": "/manifest.webmanifest.json"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800"
        }
      ],
      "source": "/blog/(.*)"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31556952"
        }
      ],
      "source": "/images/(.*)"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31556952"
        }
      ],
      "source": "/build/(.*)"
    }
  ],
  "images": {
    "contentDispositionType": "inline",
    "contentSecurityPolicy": "script-src 'none'; frame-src 'none'; sandbox;",
    "dangerouslyAllowSVG": false,
    "formats": ["image/webp"],
    "minimumCacheTTL": 60,
    "sizes": [256, 640, 1080, 2048, 3840]
  },
  "trailingSlash": false
}
